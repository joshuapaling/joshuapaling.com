<%= simple_form_for [:admin, @post] do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="large-2 columns">
      <%= f.input :published %>
    </div>
    <div class="large-4 columns">
      <%= f.input :published_at, as: :string %>
    </div>
    <div class="large-6 columns">
      <%= f.association :author %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.input :slug %>
    </div>
    <div class="large-6 columns">
      <%= f.input :title %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.association :categories, as: :check_boxes %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.input :blurb %>
      <%= f.input :body %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.error :base %>
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
