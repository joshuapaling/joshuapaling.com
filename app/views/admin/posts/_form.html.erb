<%= simple_form_for [:admin, @admin_post] do |f| %>
  <%= f.error_notification %>

  <%= f.input :slug %>
  <%= f.input :title %>
  <%= f.input :published_at %>
  <%= f.input :blurb %>
  <%= f.input :body %>
  <%= f.input :published %>
  <%= f.association :author %>
  <%= f.association :categories, as: :check_boxes %>
  <%= f.error :base %>
  <%= f.button :submit %>
<% end %>
