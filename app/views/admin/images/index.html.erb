<h1>Listing images</h1>
<%= link_to 'New Image', new_admin_image_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Path</th>
      <th>Alt</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.image.thumb %></td>
        <td><%= image.image %></td>
        <td><%= image.alt %></td>
        <td>
          <%= link_to 'Edit', edit_admin_image_path(image), class: 'btn btn-sm btn-default' %>
          <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), [:admin, image],
            method: :delete,
            class: 'btn btn-sm btn-default',
            data: { confirm: 'Are you sure?' }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_admin_image_path, class: 'btn btn-primary' %>
