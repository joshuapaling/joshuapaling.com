<%= simple_form_for([:admin, @category]) do |f| %>
  <%= f.error_notification %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name %>
      </div>
      <div class="col-sm-6">
        <%= f.input :slug %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.error :base %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
