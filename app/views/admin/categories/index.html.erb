<h1>Listing categories</h1>
<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.slug %></td>
        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-sm btn-default' %>
          <%= link_to 'Show', posts_category_path(category.slug), target: :blank, class: 'btn btn-sm btn-default' %>
          <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), [:admin, category],
            method: :delete,
            class: 'btn btn-sm btn-default',
            data: { confirm: 'Are you sure?' }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
